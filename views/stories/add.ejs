          <p>
	          <label>
				<input
					name="allowed"
					type="checkbox"
					<?= typeof allowed !== 'undefined' && allowed === '1' ? 'checked' : ''?>
					class="filled-in"
					value="1"
				/>
	            <span>Allow Comments</span>
	          </label>
	        </p>
	      </div>

	      <div class="input-field col s12">
	        <textarea name="description" id="textarea1" class="materialize-textarea"><?= typeof description !== 'undefined' ? description : null  ?></textarea>

