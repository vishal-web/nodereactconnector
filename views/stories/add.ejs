	          <option value="active" <?=typeof status !=='undefined' && status === 'active' ? 'selected' : ''?>>Active</option>
	          <option value="unpublished" <?=typeof status !=='undefined' && status === 'unpublished' ? 'selected' : ''?>>Unpublished</option>
	          <option value="private" <?=typeof status !=='undefined' && status === 'private' ? 'selected' : ''?>>Private</option>
	        </select>
	        <label>Status</label>
	        <? if(typeof errors !== 'undefined' && typeof errors.status !== 'undefined' && errors.status !== '') { ?>
